<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/red_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginBottom="40dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/football_player_002"
                android:layout_marginBottom="60dp"/>
            <Button
                android:id="@+id/touchdown_team_a"
                android:background="@drawable/button_red_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+6 Touchdown"
                android:onClick="addSixTeamA"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/field_goal_a"
                android:background="@drawable/button_red_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+3 Field Goal"
                android:onClick="addThreeTeamA"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/extra_1_a"
                android:background="@drawable/button_red_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+1 Extra Point"
                android:onClick="addOneTeamA"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/extra_2_a"
                android:background="@drawable/button_red_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+2 Safety Points"
                android:onClick="addTwoTeamA"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#81d4fa">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginBottom="40dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/football_player_003"
                android:layout_marginBottom="60dp"/>
            <Button
                android:id="@+id/touchdown_team_b"
                android:background="@drawable/button_blue_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+6 Touchdown"
                android:onClick="addSixTeamB"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/field_goal_b"
                android:background="@drawable/button_blue_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+3 Field Goal"
                android:onClick="addThreeTeamB"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/extra_1_b"
                android:background="@drawable/button_blue_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+1 Extra Point"
                android:onClick="addOneTeamB"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/extra_2_b"
                android:background="@drawable/button_blue_team"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+2 Safety Points"
                android:onClick="addTwoTeamB"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/resetScore"
        android:background="@drawable/reset_button"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:onClick="resetScores"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />
</RelativeLayout>